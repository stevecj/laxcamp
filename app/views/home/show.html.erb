<h1>Welcome to LaxCamp</h1>

<section data-section-type='signup'>
  <h2>Sign Up</h2>
  <% @communicator ||= Communicator.new %>
  <%= form_for @communicator, as: :signup, url: signups_path do |f| %>
    <% if @communicator.errors.any? %>
      <div id="error_explanation">
	<h3><%= pluralize(@communicator.errors.count, "error") %> prohibited this signup from being completed:</h3>

	<ul>
	<% @communicator.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
	</ul>
      </div>
    <% end %>

    <div>
      <%= f.label :handle %>
      <%= f.text_field :handle %>
    </div>
    <div>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
    </div>
    <%= f.submit 'Signup', id: 'signup_submit' %>
  <%end%>
</section>

<section data-section-type='new_session_form'>
  <h2>Sign In</h2>
