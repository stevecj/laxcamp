<h1>Welcome to LaxCamp</h1>

<section data-section-type='signup'>
  <h2>Sign Up</h2>
  <% @communicator ||= Communicator.new %>
  <%= form_for @communicator, as: :signup, url: signups_path do |f| %>
    <%= render_errors @communicator.errors, prohibiting: 'signup from being completed', heading_type: :h3 %>

    <div>
      <%= f.label :handle %>
      <%= f.text_field :handle %>
    </div>

    <div>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
    </div>

    <%= f.submit 'Signup', id: 'signup_submit' %>
  <%end%>
</section>

<section data-section-type='new_session_form'>
  <h2>Sign In</h2>
  <% @com_session ||= ComSession.new %>
  <%= form_for @com_session, url: session_path do |f| %>
    <%= render_errors @com_session.errors, prohibiting: 'sign-in from being completed', heading_type: :h3 %>

    <div>
      <%= f.label :handle %>
      <%= f.text_field :handle %>
    </div>

    <%= f.submit 'Sign in', id: 'com_session_submit' %>
  <%end%>
</section>
