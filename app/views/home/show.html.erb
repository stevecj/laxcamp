	<ul>
	<% @com_session.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
	</ul>
      </div>
    <% end %>

    <div>
      <%= f.label :handle %>
      <%= f.text_field :handle %>
    </div>
    <%= f.submit 'Sign in', id: 'com_session_submit' %>
  <%end%>
</section>
